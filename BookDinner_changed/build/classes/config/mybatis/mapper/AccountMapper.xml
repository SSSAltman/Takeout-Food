<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ly.programmer.dao.AccountDao">
	<!-- 客户插入操作 -->
	<insert id="add" parameterType="com.ly.programmer.entity.Account">
		insert into account(id,name,password,realName,phone,address) values(null,#{name},#{password},#{realName},#{phone},#{address})
	</insert>
	<!-- 客户编辑操作 -->
	<update id="edit" parameterType="com.ly.programmer.entity.Account">
		update account set name = #{name},password = #{password},realName = #{realName},phone = #{phone},address = #{address} where id = #{id}
	</update>
	<!-- 客户信息搜索查询 -->
	<select id="findList" parameterType="Map" resultType="com.ly.programmer.entity.Account">
		select * from account 
		<if test="name != null">
			where name like '%${name}%' 
		</if>
		<if test="offset != null and pageSize != null">
			limit #{offset},#{pageSize}
		</if>
	</select>
	<!-- 根据客户登录名搜索 -->
	<select id="findByName" parameterType="String" resultType="com.ly.programmer.entity.Account">
		select * from account where name = #{value} 
	</select>
	<!-- 模糊搜索总条数 -->
	<select id="getTotal" parameterType="Map" resultType="Integer">
		select count(*) from account 
		<if test="name != null">
			where name like '%${name}%' 
		</if>
	</select>
	<!-- 删除客户信息 -->
	<delete id="delete" parameterType="Long">
		delete from account where id = #{value}
	</delete>
</mapper>